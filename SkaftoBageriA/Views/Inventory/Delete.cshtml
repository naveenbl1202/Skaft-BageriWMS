@model SkaftoBageriA.Models.Inventory

<h2>Delete Inventory</h2>

<p>Are you sure you want to delete this inventory?</p>

<div>
    <strong>Batch Number:</strong> @Model.BatchNumber<br />
    <strong>Quantity In Stock:</strong> @Model.QuantityInStock<br />
    <strong>Reorder Point:</strong> @Model.ReorderPoint<br />
    <strong>Product:</strong> @Model.Product?.ProductName<br />
    <strong>Supplier:</strong> @Model.Supplier?.Name
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="InventoryId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
